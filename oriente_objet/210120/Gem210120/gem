def is_multiple_of_3_or_5? (final_num)
if (final_num %3 == 0) || (final_num %5 == 0) ? (return true) : (return false)
end

def sum_of_3_or_5_multiples (final_num)
if final_num.to_i < 0 || final_number.to_i
return "juste des entiers fils !"
else
tab = []
final_num.times do |i|
tab << i
end

tab.map {|x| is_multiple_of_3_or_5?(x)? x : 0}.sum
end 
end


